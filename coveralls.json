{
  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "template_path": "cover/coverage.html"
  },
  "skip_files": [
    "deps/",
    "_build/",
    "test/",
    "priv/"
  ],
  "minimum_coverage": 90,
  "terminal_options": {
    "file_column_width": 40
  },
  "custom": {
    "exclude_pattern": "test/",
    "exclude_fully_covered": false
  }
}